{
  "categories": {
    "correctness": "error",
  },
  "plugins": ["typescript"],
  "overrides": [
    {
      "files": ["**/*.{ts,tsx}"],
      "plugins": ["typescript"],
      "rules": {
        "typescript/no-explicit-any": "off"
      }
    },
    {
      "files": ["**/*.spec.ts"],
      "env": { "jest": true },
      "rules": {
        "no-empty-function": "error"
      }
    }
  ],
  "ignorePatterns": ["dist", "node_modules", "**/*.d.ts"]
}
